<?xml version="1.0" encoding="utf-8"?>
<!--LibEOSSDK plugin additions-->
<root xmlns:android="http://schemas.android.com/apk/res/android">
	<init>
		<log text="LibEOSSDK init"/>
		<setBool result="bSupported" value="false"/>
		<isArch arch="armeabi-v7a">
			<setBool result="bSupported" value="true"/>
		</isArch>
		<isArch arch="arm64-v8a">
			<setBool result="bSupported" value="true"/>
		</isArch>

    <setStringFromProperty result="ProductId" ini="Engine" section="EOSCore" property="ProductId" default="NOT SET"/>
    <setStringFromProperty result="SandboxId" ini="Engine" section="EOSCore" property="SandboxId" default="NOT SET"/>
    <setStringFromProperty result="DeploymentId" ini="Engine" section="EOSCore" property="DeploymentId" default="NOT SET"/>
    <setStringFromProperty result="ClientId" ini="Engine" section="EOSCore" property="ClientId" default="NOT SET"/>
    <setStringFromProperty result="ClientSecret" ini="Engine" section="EOSCore" property="ClientSecret" default="NOT SET"/>
	</init>

	<resourceCopies>
		<isArch arch="armeabi-v7a">
    		<log text="Copying libEOSSDK.so"/>
			<copyFile src="$S(PluginDir)/Lib/armeabi-v7a/libEOSSDK.so" dst="$S(BuildDir)/libs/armeabi-v7a/libEOSSDK.so" />
		</isArch>
		<isArch arch="arm64-v8a">
    		<log text="Copying libEOSSDK.so"/>
      <copyFile src="$S(PluginDir)/Lib/arm64-v8a/libEOSSDK.so" dst="$S(BuildDir)/libs/arm64-v8a/libEOSSDK.so" />
		</isArch>
    <log text="Copying eos-sdk.aar"/>
    <copyFile src="$S(PluginDir)/Bin/eos-sdk.aar" dst="$S(BuildDir)/libs/eos-sdk.aar" />
	</resourceCopies>

<buildGradleAdditions>

</buildGradleAdditions>
  
  <baseBuildGradleAdditions>
    <if condition="bSupported">
      <true>
        <insert>
          allprojects {
          repositories {
          repositories {
          flatDir {
        </insert>
        <insertValue value="dirs '$S(PluginDir)/Bin'"/>
        <insertNewline/>
        <insert>
          }
          }
          }
          }
        </insert>
      </true>
    </if>
  </baseBuildGradleAdditions>

  <gradleProperties>
      <!--<insertValue value="android.useAndroidX=true"></insertValue>
      <insertNewline />-->
      <insertValue value="ProductId=$S(ProductId)"></insertValue>
      <insertNewline />
      <insertValue value="SandboxId=$S(SandboxId)"></insertValue>
      <insertNewline />
      <insertValue value="DeploymentId=$S(DeploymentId)"></insertValue>
      <insertNewline />
      <insertValue value="ClientId=$S(SandboxId)"></insertValue>
      <insertNewline />
      <insertValue value="ClientSecret=$S(ClientSecret)"></insertValue>
      <insertNewline />
  </gradleProperties>
  
    <buildGradleAdditions>
    <if condition="bSupported">
      <true>
        <insert>
          dependencies {
            implementation 'com.android.support:appcompat-v7:28.0.0'
            implementation 'androidx.constraintlayout:constraintlayout:1.1.3'
            implementation 'androidx.security:security-crypto:1.0.0-rc01'
            implementation(name: 'eos-sdk', ext: 'aar')
            }
        </insert>
          <insert>
            android {
             packagingOptions {
                    pickFirst  'build-data.properties'
             }
              preBuild {
                doFirst {
                  </insert>
                  <insertValue value="String str = &quot;&lt;string name=\&quot;eos_login_protocol_scheme\&quot;&gt;eos.$S(ClientId)&lt;/string&gt;&quot;"> </insertValue>
                  <insertNewline />
                  <insert>
                    File xmlFile = new File("${project.projectDir}/src/main/res/values/strings.xml")

                    if (xmlFile) {
                      if (!xmlFile.text.contains(str)) {
                        xmlFile.text = xmlFile.text.replaceAll("&lt;/resources&gt;","    " + str + "\n&lt;/resources&gt;")
                      }
                    }
                </insert>
                <insert>
                }
              }
            }
          </insert>  
      </true>
    </if>
  </buildGradleAdditions>
  
  <gameActivityImportAdditions>
        <insert>
            import com.epicgames.mobile.eossdk.EOSSDK;
        </insert>
    </gameActivityImportAdditions>
  
  <gameActivityOnCreateAdditions>
        <insert>
            EOSSDK.init(getApplicationContext());
        </insert>
    </gameActivityOnCreateAdditions>

  <androidManifestUpdates>
    <addPermission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <addPermission android:name="android.permission.INTERNET"/>
    <addPermission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <addElements tag="application">
     <activity
            android:name="com.epicgames.mobile.eossdk.EOSAuthHandlerActivity"
            android:exported="true"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/eos_login_protocol_scheme" />
                <data android:scheme="string/eos_login_protocol_scheme" />
            </intent-filter>
        </activity>
    </addElements>
  
  </androidManifestUpdates>

  <soLoadLibrary>
    <if condition="bSupported">
      <true>
        <loadLibrary name="EOSSDK" failmsg="EOSSDK library not loaded!" />
      </true>
    </if>
  </soLoadLibrary>

</root>
